      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sibsiu.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="PlansPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="367*"/>
            <ColumnDefinition Width="433*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Margin="43,65,0,98" Fill="#FF5A5A5A" RadiusX="14.64" RadiusY="14.64"/>
        <Rectangle Margin="0,82,42,115" Fill="#FFADADAD" Grid.Column="1"/>
        <Grid Grid.Column="1" Margin="0,82,42,115">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="191*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="46*"/>
            </Grid.RowDefinitions>
            <Image Margin="10,0,12,0" Source="/Image1.png" Stretch="Fill" Height="309" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
